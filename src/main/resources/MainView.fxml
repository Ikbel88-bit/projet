<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainViewController"
           style="-fx-background-color: linear-gradient(to bottom right, #f5f8ff, #e3eafc 80%); -fx-font-family: 'Segoe UI', Arial, sans-serif;">
    <HBox alignment="CENTER" spacing="0" style="-fx-padding: 40 0 40 0;">
        <!-- Colonne gauche : Texte et boutons -->
        <VBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 60 0 60;" minWidth="420">
            <Text text="Trouvez votre futur outil RH" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #2c3e50;" />
            <Text text="Gérez vos entretiens et évaluations simplement, efficacement et en toute confiance."
                  style="-fx-font-size: 17px; -fx-fill: #5d6d7e; -fx-padding: 0 0 10 0;" />
            <HBox spacing="18">
                <Button fx:id="btnEntretiens" mnemonicParsing="false" onAction="#handleEntretiens" text="Gestion des Entretiens"
                        style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 12 28; -fx-background-radius: 22; -fx-cursor: hand; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(59,130,246,0.10), 4, 0, 0, 1);" />
                <Button fx:id="btnEvaluations" mnemonicParsing="false" onAction="#handleEvaluations" text="Gestion des Évaluations"
                        style="-fx-background-color: #f1f5f9; -fx-text-fill: #3b82f6; -fx-font-size: 15px; -fx-padding: 12 28; -fx-background-radius: 22; -fx-cursor: hand; -fx-font-weight: bold; -fx-border-color: #3b82f6; -fx-border-width: 2;" />
                <Button fx:id="btnListeEntretiens" mnemonicParsing="false" onAction="#handleListeEntretiens" text="Liste des Entretiens"
                        style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-size: 15px; -fx-padding: 12 28; -fx-background-radius: 22; -fx-cursor: hand; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(142,68,173,0.10), 4, 0, 0, 1);" />
            </HBox>
        </VBox>
        <!-- Colonne droite : Image professionnelle avec cadre amélioré -->
        <VBox alignment="CENTER" spacing="0" minWidth="380" maxWidth="420">
            <StackPane style="-fx-background-color: transparent;">
                <StackPane style="-fx-background-color: white; -fx-background-radius: 40; -fx-border-radius: 40; -fx-border-color: #e0e6ef; -fx-border-width: 2; -fx-effect: dropshadow(gaussian, rgba(44,62,80,0.10), 18, 0, 0, 4); -fx-padding: 18;">
                    <!-- Suppression de l'ImageView et de son contenu -->
                </StackPane>
            </StackPane>
        </VBox>
    </HBox>
</StackPane>